<div class="container" style="margin-top:50px;">
    <form action="/save" method="GET">
        <center>
            <h1>Recommend Page</h1>
                <h2>recommend number</h2>
                    <% @numbers.each do |n| %>
                        <%= image_tag n.to_s + ".jpg" %>
                    <%end%>
                <h2>bonus number</h2>
                    <%= image_tag @bonus.join("") + ".jpg" %>
                <br>
                    <button type="button" id="reload" class="btn btn-lg btn-primary">RETRY</button>
                    <button type="submit" class="btn btn-default" style="margin-top:20px;">SAVE</button>
        </center>
        <script>
            $('#reload').click(function(){
                location.reload();
            })
        </script>
    </form>
</div>